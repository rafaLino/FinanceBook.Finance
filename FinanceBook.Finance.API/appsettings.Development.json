{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Warning"
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3000",
          "credentials": {
            "login": "admin",
            "password": "admin"
          },
          "labels": [
            {
              "key": "app",
              "value": "Finance-api"
            }
          ],
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss} [{Level:u3}] [{ThreadId}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "DATABASE_URL": "postgres://admin:admin@postgresdb:5432/book",
  "AllowedHosts": "*",
  "Jwt": {
    "secret": "Marmelada de banana, bananada de goiaba Goiabada de marmelo",
    "issuer": "https://localhost:44341",
    "audience": "http://localhost:4200"
  },
  "Cors": {
    "allowedMethods": [ "*" ],
    "allowedOrigins": [ "*" ],
    "allowedHeaders": ["*"]

  }

}
